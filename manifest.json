{
  "manifest_version": 2,

  "name": "LAPI Chrome Extension V2",
  "description": "This extension is the UI for LiveAPI",
  "version": "1.0",

  "browser_action": {
    // "default_icon": "icon.png",
    "default_popup": "lapi.html",
    "default_title": "LiveAPI Endpoint Creation Tool"
  },
  "web_accessible_resources": [ "toolbar.html"],
  "background": {
    "scripts": ["bundles/background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [
      {
      "matches": ["http://*/*","https://*/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "bundles/contentscripts.bundle.js"]
      }
  ],
  "permissions": [
    "activeTab",
    "file:///*",
    "http://*/*",
    "https://*/*"
  ]
}